<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jesper.shutapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.UsersListActivity"/>
        <activity android:name=".Activities.ChatActivity" >
            <meta-data
                android:value=".Activities.UsersListActivity"
                android:name="android.support.PARENT_ACTIVITY"/>
        </activity>
        <activity android:name=".Activities.Settings" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainSettings"/>
        </activity>
        <activity android:name=".Activities.MainSettings">
            <meta-data
                android:value=".Activities.UsersListActivity"
                android:name="android.support.PARENT_ACTIVITY"/>
        </activity>
        <activity android:name=".Fragments.TermsOfService" />

        <activity android:name=".Activities.RegisterUser" >
            <meta-data
                android:value=".Activities.MainActivity"
                android:name="android.support.PARENT_ACTIVITY"/>
        </activity>
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>