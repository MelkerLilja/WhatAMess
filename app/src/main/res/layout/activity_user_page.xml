<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserPageActivity">

    <ImageView
        android:id="@+id/userpage_background"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="100dp"
        android:foregroundGravity="top"
        android:scaleType="fitXY" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_page"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/text_username_userpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_user_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/userpage_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_username_userpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#EBEBEB"
        android:textSize="13dp"/>


    <LinearLayout
        android:id="@+id/friend_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">

        <ImageButton
            android:id="@+id/button_chat_userpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="3dp"
            android:onClick="btnSendMessage"
            android:src="@drawable/svg_chat"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="btnAddFriend"
            android:src="@drawable/svg_add_user"
            android:visibility="gone" />


    </LinearLayout>


    <TextView
        android:id="@+id/userpage_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Friends"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/bio_title_userpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userpage_background"
        android:layout_marginStart="70dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="ABOUT"
        android:textColor="@color/daynight"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/text_userpage_bio"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/bio_title_userpage"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/daynight" />

    <View
        android:id="@+id/divider_line_friends"
        android:layout_width="270dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/text_userpage_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/daynight"/>

</RelativeLayout>