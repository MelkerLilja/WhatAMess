<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserPageActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_page"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/text_username_userpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_user_page"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textColor="@color/daynight"
            android:textSize="18dp" />
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/profile_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_username_userpage"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message_black"
                    android:tint="@color/daynight"
                    android:onClick="btnSendMessage"
                    android:background="@drawable/circle_image_user_page_activity"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_add_friend"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/addpersonicon"
                    android:tint="@color/daynight"
                    android:background="@drawable/circle_image_user_page_activity"
                    android:layout_weight="1"
                    android:onClick="btnAddFriend"/>

                <ImageButton
                    android:id="@+id/btn_friend_added"
                    android:visibility="gone"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@color/daynight"
                    android:background="@drawable/ic_check_circle_black_24dp"
                    android:layout_weight="1"
                    android:onClick="btnRemoveFriend"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bio_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/daynight"
            android:layout_below="@id/profile_buttons"
            android:layout_marginLeft="50dp"
            android:text="Bio" />

        <TextView
            android:id="@+id/text_userpage_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bio_profile_text"
            android:layout_marginLeft="50dp"
            android:textColor="@color/daynight"
            android:layout_marginRight="50dp"/>





</RelativeLayout>