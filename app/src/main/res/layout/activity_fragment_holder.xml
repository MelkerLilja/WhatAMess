<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FragmentHolderActivity">

    <FrameLayout
        android:id="@+id/fragment_activity_user_list_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_menu" />

    <ImageView
        android:id="@+id/notification_requests"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="visible"
        android:background="@drawable/ic_lens_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"/>

    <ImageView
        android:id="@+id/notification_chats"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="visible"
        android:background="@drawable/ic_lens_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="135dp"/>

    <include
        android:id="@+id/bottom_nav_menu"
        layout="@layout/bottom_toolbar" />


</RelativeLayout>