<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainSettings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_menu"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:id="@+id/settings_title"/>

    <include
        android:id="@+id/logged_in_toolbar"
        layout="@layout/mtoolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/settings_title"
        android:layout_centerHorizontal="true"
        android:onClick="changePic"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <Button
        android:id="@+id/change_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pic_view"
        android:layout_centerHorizontal="true"
        android:text="change picture"
        android:textSize="12sp"
        android:onClick="changePic"
        />

    <EditText
        android:id="@+id/user_name_settings_edittxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_profile_pic"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/new_password_edittxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_settings_edittxt"
        android:layout_centerHorizontal="true"
        android:hint="New Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/email_settings_edittext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/new_password_edittxt"
        android:hint="Change Email"
        android:inputType="textEmailAddress"/>


    <Button
        android:id="@+id/submit_email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_settings_edittext"
        android:layout_centerHorizontal="true"
        android:text="Update user"
        android:layout_margin="10dp"
        android:onClick="updateUser"/>

    <TextView
        android:id="@+id/user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/submit_email_btn"
        android:clickable="true"
        android:onClick="user_data"
        android:text="@string/user_data_txt"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_data"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="theme"
        android:text="@string/theme"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/terms_of_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theme"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="terms_of_service"
        android:text="@string/terms_of_service"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms_of_service"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="log_out"
        android:text="@string/log_out_txt"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_out"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:clickable="true"
        android:onClick="delete_account"
        android:text="@string/delete_account_txt"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/fragment_main_settings_holder"/>

</RelativeLayout>

</ScrollView>