<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSettings">

    <include
        layout="@layout/mtoolbar"
        android:id="@+id/logged_in_toolbar"/>

    <TextView
        android:id="@+id/user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_data_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:textSize="25sp"
        android:onClick="user_data"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme"
        android:layout_below="@id/user_data"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:onClick="theme"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notifications_txt"
        android:layout_below="@id/theme"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:onClick="notifications"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out_txt"
        android:layout_below="@id/notifications"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="300sp"
        android:textColor="@color/colorAccent"
        android:onClick="log_out"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_txt"
        android:layout_below="@id/log_out"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorAccent"
        android:onClick="delete_account"
        android:clickable="true"
        />

</RelativeLayout>