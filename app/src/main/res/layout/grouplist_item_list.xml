<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendlist_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/text_friends_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/friendlist_profile_image"
        android:padding="8dp"
        android:textColor="@color/daynight"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp" />

    <ImageButton
        android:id="@+id/btn_add_group"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_group_add_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/btn_added_to_group"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_check_circle_black_24dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>



</RelativeLayout>