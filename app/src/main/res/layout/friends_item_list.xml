<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendlist_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/text_friends_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/friendlist_profile_image"
        android:padding="8dp"
        android:textColor="@color/daynight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp" />

    <ImageButton
        android:id="@+id/remove_friend_list_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="370dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_clearblack" />


</RelativeLayout>