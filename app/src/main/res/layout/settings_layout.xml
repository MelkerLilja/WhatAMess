<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/mtoolbar" />


    <ImageView
        android:id="@+id/user_pic_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/user_name_settings_edittxt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/placeholder"
        android:tooltipText="press to change picture" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_pic_view"
        android:layout_above="@id/user_name_settings_edittxt"
        android:text="change picture"
        android:textSize="12sp"
        android:onClick="changePic"
        />

    <EditText
        android:id="@+id/user_name_settings_edittxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_password_edittxt"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/new_password_edittxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_settings_edittext"
        android:layout_centerHorizontal="true"
        android:hint="New Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/email_settings_edittext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Change Email"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/submit_email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_settings_edittext"
        android:layout_centerHorizontal="true"
        android:text="Update user"
        android:layout_margin="10dp"
        android:onClick="updateUser"/>

</RelativeLayout>