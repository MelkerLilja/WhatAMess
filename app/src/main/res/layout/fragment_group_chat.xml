<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GroupChatFragment">

    <include
        android:id="@+id/include_toolbar_groupchat"
        layout="@layout/mtoolbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_test"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_groupchat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GROUP CHAT"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/imagebutton_checkbox"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_check_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edittext_groupchat"
        android:hint="Enter groupname here"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text_groupchat"/>

        <ListView
            android:id="@+id/listview_friends_groupchat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edittext_groupchat"/>

</RelativeLayout>